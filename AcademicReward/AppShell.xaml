<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AcademicReward.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AcademicReward"
    xmlns:views="clr-namespace:AcademicReward.Views"
    Shell.FlyoutBehavior="Disabled">

    <!-- Primary Author: Generated File -->
    <!-- Secondary Author: Wil LaLonde -->
    <!-- Reviewer: Xee Lo -->

    <ShellContent 
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage"
        Shell.TabBarIsVisible="False"/>

    <TabBar>
        <Tab Title="Home" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate views:HomePage}" Route="HomePage" x:Name="HomePage"/>
        </Tab>
        <Tab Title="Notification" Icon="bell.png">
            <ShellContent ContentTemplate="{DataTemplate views:NotificationPage}" Route="NotificationPage" x:Name="NotificationPage"/>
        </Tab>
        <Tab Title="Task" Icon="plus.png">
            <ShellContent ContentTemplate="{DataTemplate views:TaskPage}" Route="TaskPage" x:Name="TaskPage"/>
        </Tab>
        <Tab Title="Shop" Icon="shop.png">
            <ShellContent ContentTemplate="{DataTemplate views:ShopPage}" Route="ShopPage" x:Name="ShopPage"/>
        </Tab>
        <Tab Title="Profile" Icon="profile.png">
            <ShellContent ContentTemplate="{DataTemplate views:ProfilePage}" Route="ProfilePage" x:Name="ProfilePage"/>
        </Tab>
    </TabBar>
</Shell>
