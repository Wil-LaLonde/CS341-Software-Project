<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AcademicReward.Views.ShopPage"
             Title="Shop">
    <VerticalStackLayout>
        <Label 
            Text="Shop"
            FontSize="50"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <HorizontalStackLayout>
            <Button ImageSource="shopdemoticket.png"
                Clicked="Ticket_Clicked" Scale="0.25"
                WidthRequest="300" />

            <Button ImageSource="shirt.png"
                Clicked="Shirt_Clicked" WidthRequest="300" />
        </HorizontalStackLayout>
            
        
        <Button
                Text="Add Shop Item"
                Clicked="Button_Clicked"    
                FontSize="25"
                Background="Gray"
                BorderColor="Black"
                BorderWidth="2"
                CornerRadius="0"
                Margin="0, 40"/>
    </VerticalStackLayout>
</ContentPage>