<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AcademicReward.Views.GroupsPage"
             Title="Your Groups">

    <VerticalStackLayout>
        <ListView x:Name="GroupsLV" ItemsSource="{Binding Groups}" VerticalOptions="Center">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Button Text="{Binding Name}" Command="{Binding Path=BindingContext.GroupSelectedCommand, Source={x:Reference GroupsLV}}" CommandParameter="{Binding .}" />
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>

</ContentPage>