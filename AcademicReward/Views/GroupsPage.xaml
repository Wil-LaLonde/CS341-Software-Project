<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AcademicReward.Views.GroupsPage"
             Title="Your Groups">

    <VerticalStackLayout>
        <ListView x:Name="GroupsLV" ItemsSource="{Binding Groups}" VerticalOptions="Center">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Button Text="{Binding Name}" Command="{Binding Path=BindingContext.SelectGroupCommand, Source={x:Reference Name=GroupsPage}}" CommandParameter="{Binding .}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>

</ContentPage>